template(name="apiDocumentation")
  .dual-layout#api
    .detail-wrapper
      .dual-detail
        .api-machine
          .header
            h1 {{currentNode.name}}
            h3 {{currentNode.description}}
          .members
            h1 Members
            input(type="button" value="add")
          .methods
            h1 Methods
            input(type="button" value="add")

    .dual-addon
      .filter
        input(name='apiFilter' type="text" placeholder="TÃ¬m Documentation")
      .nano: .nano-content
        ul.api-docs
          each apiNodes
            +apiNode

template(name="apiNode")
  li.api-node(class="{{nodeActiveClass}}")
    span.link-hover {{name}}
    .remove-node.icon-cancel-circled-4
  if childNodes.length
    ul
      each childNodes
        +apiNode nodeDetails