@require '../wings.import.styl'

nav .branding
  width left-pane-size
  background-color #3e313c
  color #fff

.dual-layout
  clearfix()
  height 100%

  .detail-wrapper
    float left; width 100%; height 100%
    .dual-detail
      margin-left left-pane-size//; padding 0 10px
      height 100%; overflow hidden

  .dual-addon
    float left
    width left-pane-size; height 100%; overflow hidden
    margin-left -100%

  .section
    background-color #ffffff
    border solid 1px #E5E5E5
    .panel-heading
      padding 8px
      /*position relative*/
      border-bottom none
      background-color #ffffff
    .panel-body
      padding 0; border-radius bottom 0
      border-top solid 1px #dddddd
    .panel-footer
      clearfix()
      background-color #ffffff
      border-top solid 1px #ddd
      .right-float
        float right; margin-right 10px