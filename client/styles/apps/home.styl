@require '../wings.import.styl'

.dual-layout#home
  clearfix()
  .dual-addon
    background-color #4D394B
    color #ab9ba9
    .channel-wrapper
      margin-top 20px
      font-size 16px
      ul
        padding-left 0
        list-style none
        .channel-item
          cursor pointer
          padding-left 15px; line-height 25px
          width (left-pane-size - 20)
          border-radius right 4px
          &:hover
            color #fff
            background-color #3e313c
          &.active
            background-color #4c9689
            color #fff
        .header
          padding 5px 0 0 15px
        .channel-item.direct
          .online-status
            display inline-block
            width 7px; height @width
            border-radius 50%
            background-color teal
            margin 0 2px 0 6px
  .dual-detail
    .kernel-addon
      position relative; z-index 2
      background-color #efefef
      float right
      width sidebar-size; height 100%; overflow hidden
      margin-left -100%
    .kernel-wrapper
      position relative; z-index 1
      float right; width 100%; height 100%
      .kernel-detail
        position relative
        margin-right sidebar-size
        height 100%; overflow hidden

  .kernel-detail
    .kernel-content
      height 100%; padding-bottom 60px
      .channel-messages
        padding-left 15px
    .kernel-footer
      fixed bottom 0 left left-pane-size right sidebar-size
      padding 0 15px 20px 15px
      .messenger-input
        border 2px solid rgba(0,39,59,0.2)
        border-radius 4px; padding 8px 5px
        width 100%; font-size 16px

  .channel-messages .message
    position relative
    padding 0 40px 0 50px
    .avatar
      absolute left 0 top 0
      width 40px; height 40px
      background-size cover
      border-radius 4px
    .message-meta
      .owner-alias
        font-weight bolder
      .time-stamp
        color #999; font-size 12px
    .content
      line-height 22px
      padding-top 4px
    &.separator
      margin-top 10px
      .content
        padding-top 0